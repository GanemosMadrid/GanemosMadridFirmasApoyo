{% extends 'GanemosMadridFirmasApoyoBundle::layout.html.twig' %}

{% block body %}

    <h1>Listado de apoyos</h1>
    <p><strong>{{ pagination.getTotalItemCount }}</strong> personas ya han brindado su apoyo a esta iniciativa.</p>

    <table class="table table-striped ">

        <tr>
            <th>Nombre</th>
            <th>Actividad / Profesi√≥n</th>
            <th>Ciudad</th>
        </tr>

        {% for firma in pagination %}
            <tr>
                <td>{% if firma.ocultarNombre == 0 %}{{ firma.nombre }}{% else %}**********{% endif %}</td>
                <td>{{ firma.actividad }}</td>
                <td>{{ firma.ciudad }}</td>
            </tr>
        {% endfor %}

    </table>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}
